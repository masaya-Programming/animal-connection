<%# CSS・・・assets/stylesheets/facilities/index.scss %>
<%= render "shared/header" %>
<div class='main'>
  <div class='top-contents'>
    <h1 class='top-message'>
      あにまるコネクションへようこそ‼︎
    </h1>
    <p class='top-explain'>
      多種多様な生物との出会いをつくり、
    </p>
    <p class='top-explain'>
      その[思い出]を記録することができます。
    </p>
  </div>  

  <%= form_with model: @facility, url: search_facilities_path, method: :get, class: "registration-main", local: true do |f| %>
    <div class='form-wrap'>
      <div class='form-header'>
        <h1 class='form-top-text'>
          動物園・水族館 検索
        </h1>
      </div>

      <div class="form-group">
        <div>
          <label class="form-text">動物園 or 水族館</label>
          <span class="indispensable-free">任意選択</span>
        </div>
        <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select-box", id:"category"}) %>
      </div>

      <div class="form-group">
        <div>
          <label class="form-text">都道府県</label>
          <span class="indispensable-free">任意選択</span>
        </div>
        <%= f.collection_select(:prefectures_id, Prefectures.all, :id, :name, {}, {class:"select-box", id:"prefectures"}) %>
      </div>
      
      <div class='register-btn'>
        <%= f.submit "スポット検索", class: "register-red-btn" %>
      </div>
    </div>
  <% end %>

  <div class='top-picture-ber'>
    <h1 class='top-picture-top'>
      新規ベストショット
    </h1>
    <ul class='top-picture-list'>
      <%= render partial: 'picture-top', collection: @pictures, as: :new_picture %>
    </ul>
    <% if @pictures.length == 0 %>
      <p class='top-picture-nil'>
        投稿されたベストショットがありません。
      </p>
      <p class='top-picture-nil'>
        新しい投稿をお待ちしております。
      </p>
    <% end %>
  </div>

</div>
<%= render "shared/footer" %>
