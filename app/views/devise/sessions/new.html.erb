<%# CSS・・・assets/stylesheets/devise/sessions-new.css %>
<%= render "shared/header-second"%>

<%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-top-text'>
      ログイン
    </h1>
  </div>

  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"登録済みのメールアドレス", autofocus: true %>
  </div>

 <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の英字と数字を両方含めたパスワード" %>
  </div>

  <div class='login-btn'>
    <%= f.submit "ユーザーログイン" ,class:"login-red-btn" %>
  </div>
</div>
<% end %>

<%= render "shared/footer-second"%>
