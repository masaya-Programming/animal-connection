<%= render "shared/header" %>
<% breadcrumb :goodlist %>
<%= breadcrumbs separator:" &#x27A4; ", class: "logo" %>

<div class="mypage-main">
  <div class="top-picture-main">
    <div class="top-picture-form-wrap">
      <h2 class="top-form-top-text top-picture-first-letter">
        いいね <%= @goods.length %>件
      </h2>
      <ul class="top-picture-list">
        <%= render partial: "picture-good", collection: @goods, as: :good_picture %>
      </ul>
      <% if @goods.length == 0 %>
        <p class="good-picture-nil-text">
          いいねをしていません。
        </p>
      <% end %>
    </div>
  </div>

  <div class="good-mypage-Back-box">
    <%= link_to "マイページに戻る", mypage_user_path(current_user), class: "mypage-Back-btn" %>
  </div>
</div>
<%= render "shared/footer" %>
