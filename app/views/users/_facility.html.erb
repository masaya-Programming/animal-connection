<%# CSS・・・assets/stylesheets/facilities/search.css %>
<li>
  <% if facility.facility.category_id == 1 %>
    <%= link_to facility_path(facility.facility_id), class: "facility-list-zoo" do %>
      <%= image_tag "zoo-icon.png", width:"52px", height:"52px" %>
      <div class="facility-text-box">
        <p class="facility-prefectures-text">
          <%= Prefectures.find(facility.facility.prefectures_id).name %>
        </p>
        <h2 class="facility-name-text">
          <%= facility.facility.name %>
        </h2>
        <div class="facility-data">
          <p>規模 : <%= facility.facility.business_data %></p>
          <div class="facility-data-count">
            <p class="facility-data-count-review"><%= image_tag "review-icon.png", width:"28px", height:"20px", class:"facility-data-count-icon" %><%= Comment.where(facility_id: facility.id).count %>件</p>
            <p class="facility-data-count-picture"><%= image_tag "picture-icon.png", width:"28px", height:"20px", class:"facility-data-count-icon" %><%= Picture.where(facility_id: facility.id).count %>件</p>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <%= link_to facility_path(facility.facility_id), class: "facility-list-aquarium" do %>
      <%= image_tag "aquarium-icon.png", width:"52px", height:"52px" %>
      <div class="facility-text-box">
        <p class="facility-prefectures-text">
          <%= Prefectures.find(facility.facility.prefectures_id).name %>
        </p>
        <h2 class="facility-name-text">
          <%= facility.facility.name %>
        </h2>
        <div class="facility-data">
          <p>規模 : <%= facility.facility.business_data %></p>
          <div class="facility-data-count">
            <p class="facility-data-count-review"><%= image_tag "review-icon.png", width:"28px", height:"20px", class:"facility-data-count-icon" %><%= Comment.where(facility_id: facility.facility.id).count %>件</p>
            <p class="facility-data-count-picture"><%= image_tag "picture-icon.png", width:"28px", height:"20px", class:"facility-data-count-icon" %><%= Picture.where(facility_id: facility.facility.id).count %>件</p>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</li>
