<%# CSS・・・assets/stylesheets/pictures/new.scss %>
<%= render "shared/header" %>

<%= form_with model: @picture, url: facility_pictures_path, class: 'registration-main', local: true do |f| %>
  <div class='form-wrap'>
    <div class='second-form-header'>
      <% if @facility.category.name == "動物園" %>
          <%= link_to facility_path(@facility.id) do %>
          <div class='show-facility-list-zoo'>
            <%= image_tag "zoo-icon.png" %>
            <h3 class='show-facility-texts'>
              <%= @facility.name %>
            </h3>
          </div>
        <% end %>
      <% else %>
        <%= link_to facility_path(@facility.id) do %>
          <div class='show-facility-list-aquarium'>
            <%= image_tag "aquarium-icon.png" %>
            <h3 class='show-facility-texts'>
              <%= @facility.name %>
            </h3>
          </div>
        <% end %>
      <% end %>
      <h1 class='second-form-text'>
        ベストショット投稿
      </h1>
    </div>

    <%= render 'shared/error_messages-second', model: f.object %>

    <div class="form-group">
      <div class="form-text-wrap">
        <label class="form-text">ベストショット</label>
        <span class="indispensable">必須</span>
      </div>
      <div class="click-upload">
        <%= f.file_field :image, class:"input-default", id:"picture-image" %>
        <p class='info-text'>※クリックしてファイルをアップロードしてください。</p>
      </div>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">タイトル</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :title, class:"input-default", id:"picture-title", autofocus: true %>
      <p class='info-text'>※投稿する画像のタイトルを入力してください。</p>
    </div>

    <div class="second-form-group">
      <div class='form-text-wrap'>
        <label class="form-text">画像説明文</label>
        <span class="indispensable-free">任意</span>
      </div>
      <%= f.text_area :description, class:"second-input-default", id:"picture-description" %>
      <p class='info-text'>※投稿する画像の説明文を入力してください。</p>
    </div>

    <div class='register-btn'>
      <%= f.submit "ベストショット投稿" ,class:"register-red-btn" %>
    </div>
  </div>
<% end %>

<%= render "shared/footer" %>
